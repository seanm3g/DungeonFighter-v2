<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPGGame.UI.Avalonia"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
        x:Class="RPGGame.UI.Avalonia.MainWindow"
        Title="DungeonFighter v2 - ASCII Edition"
        Background="Black"
        Width="1920" Height="1080" MinWidth="800" MinHeight="600" WindowStartupLocation="CenterScreen">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Main Game Canvas -->
        <local:GameCanvasControl x:Name="GameCanvas" 
                                Grid.Row="0" 
                                Margin="0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Focusable="True"
                                FocusAdorner="{x:Null}"/>
        
        <!-- TextBox for text input in action creation form -->
        <!-- Positioned where the input prompt appears on the canvas -->
        <TextBox x:Name="HiddenTextBox"
                Grid.Row="0"
                IsVisible="False"
                Width="600"
                Height="50"
                Background="Transparent"
                Foreground="Black"
                BorderThickness="0"
                BorderBrush="Transparent"
                Focusable="True"
                ZIndex="10000"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0"
                FontSize="20"
                FontFamily="Consolas, Courier New, monospace"
                FontWeight="Bold"
                Padding="15,10,15,10"/>
        
        <!-- Tuning Menu Panel Overlay -->
        <Border Grid.Row="0" 
                Background="#E0000000" 
                IsVisible="False"
                x:Name="TuningPanelOverlay"
                ZIndex="1000"
                IsHitTestVisible="True">
            <local:TuningMenuPanel x:Name="TuningMenuPanel" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Width="1000"
                                   Height="650"
                                   MinWidth="900"
                                   MinHeight="650"/>
        </Border>
        
        <!-- Settings Panel Overlay -->
        <Border Grid.Row="0" 
                Background="#E0000000" 
                IsVisible="False"
                x:Name="SettingsPanelOverlay"
                ZIndex="1000"
                IsHitTestVisible="True">
            <local:SettingsPanel x:Name="SettingsMenuPanel" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Width="1728"
                                Height="972"
                                MinWidth="1400"
                                MinHeight="800"/>
        </Border>
    </Grid>
</Window>