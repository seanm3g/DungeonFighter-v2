<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPGGame.UI.Avalonia"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
        x:Class="RPGGame.UI.Avalonia.MainWindow"
        Title="DungeonFighter v2 - ASCII Edition"
        Background="Black"
        Width="1920" Height="1080" MinWidth="1920" MinHeight="1080">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title Bar -->
        <TextBlock Grid.Row="0" 
                   Text=" DUNGEON FIGHTER" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   HorizontalAlignment="Center" 
                   Margin="0,10,0,10"/>
        
        <!-- Main Game Canvas -->
        <local:GameCanvasControl x:Name="GameCanvas" 
                                Grid.Row="1" 
                                Margin="10"
                                Focusable="True"
                                FocusAdorner="{x:Null}"/>
        
        <!-- Status Bar -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    Background="Black" 
                    Margin="0,0,0,10" 
                    HorizontalAlignment="Center">
            <TextBlock x:Name="StatusText" 
                       FontSize="12" 
                       Foreground="White" 
                       Margin="0,5,0,0"/>
            <TextBlock x:Name="HelpText" 
                       FontSize="10" 
                       Foreground="Gray" 
                       Margin="20,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
