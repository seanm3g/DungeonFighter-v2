<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:components="clr-namespace:RPGGame.UI.Avalonia.Components"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="RPGGame.UI.Avalonia.Settings.GameplaySettingsPanel"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Disabled">
        <StackPanel Spacing="20" Margin="20">
            <!-- Gameplay Settings -->
            <Border Background="White" 
                    BorderBrush="#FF404040" 
                    BorderThickness="1" 
                    CornerRadius="6" 
                    Padding="18">
                <StackPanel Spacing="15">
                    <TextBlock Text="Gameplay Settings" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="Black" 
                               Margin="0,0,0,8"/>
                    <CheckBox x:Name="ShowIndividualActionMessagesCheckBox" 
                              Content="Show Individual Action Messages" 
                              Foreground="Black"
                              FontSize="15"
                              IsChecked="False"/>
                    <CheckBox x:Name="FastCombatCheckBox" 
                              Content="Fast Combat (No Delays)" 
                              Foreground="Black"
                              FontSize="15"
                              IsChecked="False"/>
                    <CheckBox x:Name="EnableTextDisplayDelaysCheckBox" 
                              Content="Enable Text Display Delays" 
                              Foreground="Black"
                              FontSize="15"
                              IsChecked="True"/>
                    <CheckBox x:Name="ShowDetailedStatsCheckBox" 
                              Content="Show Detailed Stats" 
                              Foreground="Black"
                              FontSize="15"
                              IsChecked="False"/>
                    <CheckBox x:Name="ShowHealthBarsCheckBox" 
                              Content="Show Health Bars" 
                              Foreground="Black"
                              FontSize="15"
                              IsChecked="True"/>
                    <CheckBox x:Name="ShowDamageNumbersCheckBox" 
                              Content="Show Damage Numbers" 
                              Foreground="Black"
                              FontSize="15"
                              IsChecked="True"/>
                    <CheckBox x:Name="ShowComboProgressCheckBox" 
                              Content="Show Combo Progress" 
                              Foreground="Black"
                              FontSize="15"
                              IsChecked="True"/>
                </StackPanel>
            </Border>
            
            <!-- Save Management -->
            <Border Background="White" 
                    BorderBrush="#FF404040" 
                    BorderThickness="1" 
                    CornerRadius="6" 
                    Padding="18">
                <StackPanel Spacing="15">
                    <TextBlock Text="Save Management" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="Black" 
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Clear all saved characters. This action cannot be undone." 
                               Foreground="Black"
                               FontSize="14"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>
                    <Button x:Name="ClearSavedCharactersButton"
                            Content="Clear All Saved Characters"
                            Width="250"
                            Height="40"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Background="#FFDC3545"
                            Foreground="White"
                            BorderThickness="0"
                            CornerRadius="4"
                            HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>

