<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:settings="clr-namespace:RPGGame.UI.Avalonia.Settings"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="RPGGame.UI.Avalonia.Settings.ItemsSettingsPanel"
             Background="Transparent">
    <UserControl.Styles>
        <!-- ComboBox dropdown item styles for better readability -->
        <Style Selector="ComboBoxItem">
            <Setter Property="Background" Value="#FF2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style Selector="ComboBoxItem:pointerover">
            <Setter Property="Background" Value="#FF3A3A3A"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ComboBoxItem:selected">
            <Setter Property="Background" Value="#FF4A4A4A"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ComboBoxItem:selected:pointerover">
            <Setter Property="Background" Value="#FF5A5A5A"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <!-- Style the popup background -->
        <Style Selector="ComboBox /template/ Popup#PART_Popup Border">
            <Setter Property="Background" Value="#FF2A2A2A"/>
        </Style>
    </UserControl.Styles>
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Disabled">
        <StackPanel Spacing="20" Margin="20">
            <!-- Header -->
            <Border Background="White" 
                    BorderBrush="#FF404040" 
                    BorderThickness="1" 
                    CornerRadius="6" 
                    Padding="18">
                <StackPanel Spacing="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Spacing="10">
                            <TextBlock Text="Item Management" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="Black" 
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Manage weapons and armor: add new items, edit existing ones, or delete them. Changes will be saved to Weapons.json and Armor.json when you click Save." 
                                       FontSize="14" 
                                       Foreground="#FF666666" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal" 
                                    Spacing="10"
                                    VerticalAlignment="Top">
                            <Button x:Name="AddWeaponButton"
                                    Content="Add Weapon"
                                    Width="120"
                                    Height="35"
                                    Background="#FF4CAF50"
                                    Foreground="White"
                                    BorderThickness="0"
                                    CornerRadius="3"
                                    FontSize="13"
                                    Cursor="Hand"/>
                            <Button x:Name="AddArmorButton"
                                    Content="Add Armor"
                                    Width="120"
                                    Height="35"
                                    Background="#FF4CAF50"
                                    Foreground="White"
                                    BorderThickness="0"
                                    CornerRadius="3"
                                    FontSize="13"
                                    Cursor="Hand"/>
                            <Button x:Name="EditItemButton"
                                    Content="Edit Selected"
                                    Width="120"
                                    Height="35"
                                    Background="#FF2196F3"
                                    Foreground="White"
                                    BorderThickness="0"
                                    CornerRadius="3"
                                    FontSize="13"
                                    Cursor="Hand"
                                    IsEnabled="False"/>
                            <Button x:Name="DeleteItemButton"
                                    Content="Delete Selected"
                                    Width="120"
                                    Height="35"
                                    Background="#FFF44336"
                                    Foreground="White"
                                    BorderThickness="0"
                                    CornerRadius="3"
                                    FontSize="13"
                                    Cursor="Hand"
                                    IsEnabled="False"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Weapons Section -->
            <Border Background="White" 
                    BorderBrush="#FF404040" 
                    BorderThickness="1" 
                    CornerRadius="6" 
                    Padding="18"
                    Margin="0,0,0,15">
                <StackPanel Spacing="12">
                    <TextBlock Text="Weapons" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="Black" 
                               Margin="0,0,0,8"/>
                    <ItemsControl x:Name="WeaponsItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="settings:ItemViewModel">
                                <Border Background="{Binding BackgroundColor}"
                                        BorderBrush="#FF404040"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="8"
                                        Margin="0,0,0,8"
                                        Cursor="Hand"
                                        PointerPressed="OnItemPointerPressed">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Name}" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold"
                                                   Foreground="Black"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"
                                                   MinWidth="150"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Type}" 
                                                   FontSize="13" 
                                                   Foreground="#FF666666"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="Tier:" 
                                                   FontSize="13" 
                                                   Foreground="Black"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                                        <ComboBox Grid.Column="3"
                                                  SelectedItem="{Binding SelectedTier, Mode=TwoWay}"
                                                  ItemsSource="{Binding AvailableTiers}"
                                                  Background="#FF2A2A2A"
                                                  Foreground="White"
                                                  BorderBrush="#FF555555"
                                                  BorderThickness="1"
                                                  Padding="6,4"
                                                  FontSize="13"
                                                  VerticalAlignment="Center"
                                                  Width="80"
                                                  Margin="0,0,10,0">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" Foreground="White" FontSize="13"/>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <TextBlock Grid.Column="4"
                                                   Text="{Binding Details}" 
                                                   FontSize="13" 
                                                   Foreground="#FF666666"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Armor Section -->
            <Border Background="White" 
                    BorderBrush="#FF404040" 
                    BorderThickness="1" 
                    CornerRadius="6" 
                    Padding="18"
                    Margin="0,0,0,15">
                <StackPanel Spacing="12">
                    <TextBlock Text="Armor" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="Black" 
                               Margin="0,0,0,8"/>
                    <ItemsControl x:Name="ArmorItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="settings:ItemViewModel">
                                <Border Background="{Binding BackgroundColor}"
                                        BorderBrush="#FF404040"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="8"
                                        Margin="0,0,0,8"
                                        Cursor="Hand"
                                        PointerPressed="OnItemPointerPressed">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Name}" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold"
                                                   Foreground="Black"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"
                                                   MinWidth="150"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Slot}" 
                                                   FontSize="13" 
                                                   Foreground="#FF666666"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="Tier:" 
                                                   FontSize="13" 
                                                   Foreground="Black"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                                        <ComboBox Grid.Column="3"
                                                  SelectedItem="{Binding SelectedTier, Mode=TwoWay}"
                                                  ItemsSource="{Binding AvailableTiers}"
                                                  Background="#FF2A2A2A"
                                                  Foreground="White"
                                                  BorderBrush="#FF555555"
                                                  BorderThickness="1"
                                                  Padding="6,4"
                                                  FontSize="13"
                                                  VerticalAlignment="Center"
                                                  Width="80"
                                                  Margin="0,0,10,0">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" Foreground="White" FontSize="13"/>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <TextBlock Grid.Column="4"
                                                   Text="{Binding Details}" 
                                                   FontSize="13" 
                                                   Foreground="#FF666666"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
