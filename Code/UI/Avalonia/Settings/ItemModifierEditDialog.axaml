<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:settings="clr-namespace:RPGGame.UI.Avalonia.Settings"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
        x:Class="RPGGame.UI.Avalonia.Settings.ItemModifierEditDialog"
        x:DataType="settings:ItemModifierEditViewModel"
        Title="Edit Item Modifier"
        Width="600" Height="500" MinWidth="500" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        Background="#FF1A1A1A">
    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#FF2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#FF2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
        </Style>
    </Window.Styles>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="{Binding DialogTitle}"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,20"/>
        
        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="15">
                <!-- Dice Result -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="Dice Result:"
                               FontSize="14"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                             x:Name="DiceResultTextBox"
                             Text="{Binding DiceResult, Mode=TwoWay}"
                             FontSize="14"
                             Margin="10,0,0,0"
                             IsReadOnly="{Binding IsEditMode}"/>
                </Grid>
                
                <!-- Name -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="Name:"
                               FontSize="14"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                             x:Name="NameTextBox"
                             Text="{Binding Name, Mode=TwoWay}"
                             FontSize="14"
                             Margin="10,0,0,0"/>
                </Grid>
                
                <!-- Description -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Description:"
                               FontSize="14"
                               Foreground="White"
                               VerticalAlignment="Top"
                               Margin="0,5,0,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1"
                             x:Name="DescriptionTextBox"
                             Text="{Binding Description, Mode=TwoWay}"
                             FontSize="14"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             MinHeight="60"
                             Margin="10,0,0,0"/>
                </Grid>
                
                <!-- Effect -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="Effect:"
                               FontSize="14"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                             x:Name="EffectTextBox"
                             Text="{Binding Effect, Mode=TwoWay}"
                             FontSize="14"
                             Margin="10,0,0,0"/>
                </Grid>
                
                <!-- Item Rank (Rarity) -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="Rarity:"
                               FontSize="14"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1"
                             x:Name="ItemRankComboBox"
                             SelectedItem="{Binding ItemRank, Mode=TwoWay}"
                             ItemsSource="{Binding AvailableRarities}"
                             FontSize="14"
                             Margin="10,0,0,0"/>
                </Grid>
                
                <!-- Min Value -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="Min Value:"
                               FontSize="14"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                             x:Name="MinValueTextBox"
                             Text="{Binding MinValue, Mode=TwoWay}"
                             FontSize="14"
                             Margin="10,0,0,0"/>
                </Grid>
                
                <!-- Max Value -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="Max Value:"
                               FontSize="14"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                             x:Name="MaxValueTextBox"
                             Text="{Binding MaxValue, Mode=TwoWay}"
                             FontSize="14"
                             Margin="10,0,0,0"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10"
                    Margin="0,20,0,0">
            <Button Content="Cancel"
                    Width="100"
                    Height="35"
                    Background="#FF757575"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="3"
                    Click="OnCancelClick"/>
            <Button Content="Save"
                    Width="100"
                    Height="35"
                    Background="#FF4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="3"
                    Click="OnSaveClick"/>
        </StackPanel>
    </Grid>
</Window>
