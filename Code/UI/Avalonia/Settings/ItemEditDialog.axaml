<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:settings="clr-namespace:RPGGame.UI.Avalonia.Settings"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
        x:Class="RPGGame.UI.Avalonia.Settings.ItemEditDialog"
        x:DataType="settings:ItemEditViewModel"
        Title="Edit Item"
        Width="600" Height="500" MinWidth="500" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        Background="#FF1A1A1A">
    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#FF2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#FF2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
        </Style>
    </Window.Styles>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="{Binding DialogTitle}"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,20"/>
        
        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="15">
                <!-- Name -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="Name:"
                               FontSize="14"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                             x:Name="NameTextBox"
                             Text="{Binding Name, Mode=TwoWay}"
                             FontSize="14"
                             Margin="10,0,0,0"/>
                </Grid>
                
                <!-- Weapon Type (only for weapons) -->
                <Grid IsVisible="{Binding ShowWeaponFields}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="Weapon Type:"
                               FontSize="14"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1"
                             x:Name="TypeComboBox"
                             SelectedItem="{Binding Type, Mode=TwoWay}"
                             ItemsSource="{Binding AvailableWeaponTypes}"
                             FontSize="14"
                             Margin="10,0,0,0"/>
                </Grid>
                
                <!-- Armor Slot (only for armor) -->
                <Grid IsVisible="{Binding ShowArmorFields}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="Armor Slot:"
                               FontSize="14"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1"
                             x:Name="SlotComboBox"
                             SelectedItem="{Binding Slot, Mode=TwoWay}"
                             ItemsSource="{Binding AvailableSlots}"
                             FontSize="14"
                             Margin="10,0,0,0"/>
                </Grid>
                
                <!-- Tier -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="Tier:"
                               FontSize="14"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1"
                             x:Name="TierComboBox"
                             SelectedItem="{Binding Tier, Mode=TwoWay}"
                             ItemsSource="{Binding AvailableTiers}"
                             FontSize="14"
                             Margin="10,0,0,0"/>
                </Grid>
                
                <!-- Base Damage (only for weapons) -->
                <Grid IsVisible="{Binding ShowWeaponFields}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="Base Damage:"
                               FontSize="14"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                             x:Name="BaseDamageTextBox"
                             Text="{Binding BaseDamage, Mode=TwoWay}"
                             FontSize="14"
                             Margin="10,0,0,0"/>
                </Grid>
                
                <!-- Attack Speed (only for weapons) -->
                <Grid IsVisible="{Binding ShowWeaponFields}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="Attack Speed:"
                               FontSize="14"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                             x:Name="AttackSpeedTextBox"
                             Text="{Binding AttackSpeed, Mode=TwoWay}"
                             FontSize="14"
                             Margin="10,0,0,0"/>
                </Grid>
                
                <!-- Armor Value (only for armor) -->
                <Grid IsVisible="{Binding ShowArmorFields}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="Armor:"
                               FontSize="14"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                             x:Name="ArmorTextBox"
                             Text="{Binding Armor, Mode=TwoWay}"
                             FontSize="14"
                             Margin="10,0,0,0"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10"
                    Margin="0,20,0,0">
            <Button Content="Cancel"
                    Width="100"
                    Height="35"
                    Background="#FF757575"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="3"
                    Click="OnCancelClick"/>
            <Button Content="Save"
                    Width="100"
                    Height="35"
                    Background="#FF4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="3"
                    Click="OnSaveClick"/>
        </StackPanel>
    </Grid>
</Window>
