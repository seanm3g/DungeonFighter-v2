<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="RPGGame.UI.Avalonia.Settings.TestingSettingsPanel"
             Background="Transparent"
             VerticalAlignment="Stretch"
             HorizontalAlignment="Stretch">
    <Grid Margin="20" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Test Buttons - Fixed at top, always visible -->
        <StackPanel Grid.Row="0" Spacing="15" Margin="0,0,0,20" VerticalAlignment="Top">
            <!-- Component Tests Section -->
            <StackPanel Spacing="8">
                <TextBlock Text="COMPONENT TESTS" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="#FFD700" 
                          Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button x:Name="TestActionBlocksButton" Content="Action Blocks" Width="140" Height="35"
                            Background="#FF555555" Foreground="White" BorderThickness="0" CornerRadius="4"
                            FontSize="14" FontWeight="SemiBold"/>
                    <Button x:Name="TestDiceRollButton" Content="Dice Rolls" Width="140" Height="35"
                            Background="#FF555555" Foreground="White" BorderThickness="0" CornerRadius="4"
                            FontSize="14" FontWeight="SemiBold"/>
                    <Button x:Name="TestDungeonEnemyButton" Content="Dungeon/Enemy" Width="140" Height="35"
                            Background="#FF555555" Foreground="White" BorderThickness="0" CornerRadius="4"
                            FontSize="14" FontWeight="SemiBold"/>
                    <Button x:Name="TestActionExecutionButton" Content="Action Execution" Width="140" Height="35"
                            Background="#FF555555" Foreground="White" BorderThickness="0" CornerRadius="4"
                            FontSize="14" FontWeight="SemiBold"/>
                    <Button x:Name="TestCharacterSystemButton" Content="Character System" Width="140" Height="35"
                            Background="#FF555555" Foreground="White" BorderThickness="0" CornerRadius="4"
                            FontSize="14" FontWeight="SemiBold"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,5,0,0">
                    <Button x:Name="TestEquipmentSystemButton" Content="Equipment System" Width="140" Height="35"
                            Background="#FF555555" Foreground="White" BorderThickness="0" CornerRadius="4"
                            FontSize="14" FontWeight="SemiBold"/>
                    <Button x:Name="TestDungeonRewardsButton" Content="Dungeon Rewards" Width="140" Height="35"
                            Background="#FF555555" Foreground="White" BorderThickness="0" CornerRadius="4"
                            FontSize="14" FontWeight="SemiBold"/>
                    <Button x:Name="TestLevelUpSystemButton" Content="Level Up System" Width="140" Height="35"
                            Background="#FF555555" Foreground="White" BorderThickness="0" CornerRadius="4"
                            FontSize="14" FontWeight="SemiBold"/>
                    <Button x:Name="TestXPSystemButton" Content="XP System" Width="140" Height="35"
                            Background="#FF555555" Foreground="White" BorderThickness="0" CornerRadius="4"
                            FontSize="14" FontWeight="SemiBold"/>
                    <Button x:Name="TestMultiSourceXPButton" Content="Multi-Source XP" Width="140" Height="35"
                            Background="#FF555555" Foreground="White" BorderThickness="0" CornerRadius="4"
                            FontSize="14" FontWeight="SemiBold"/>
                    <Button x:Name="TestSaveLoadSystemButton" Content="Save/Load System" Width="140" Height="35"
                            Background="#FF555555" Foreground="White" BorderThickness="0" CornerRadius="4"
                            FontSize="14" FontWeight="SemiBold"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,5,0,0">
                    <Button x:Name="TestGameStateManagementButton" Content="Game State" Width="140" Height="35"
                            Background="#FF555555" Foreground="White" BorderThickness="0" CornerRadius="4"
                            FontSize="14" FontWeight="SemiBold"/>
                    <Button x:Name="TestErrorHandlingButton" Content="Error Handling" Width="140" Height="35"
                            Background="#FF555555" Foreground="White" BorderThickness="0" CornerRadius="4"
                            FontSize="14" FontWeight="SemiBold"/>
                    <Button x:Name="TestMultiHitButton" Content="Multi-Hit" Width="140" Height="35"
                            Background="#FF555555" Foreground="White" BorderThickness="0" CornerRadius="4"
                            FontSize="14" FontWeight="SemiBold"/>
                    <Button x:Name="TestStatusEffectsButton" Content="Status Effects" Width="140" Height="35"
                            Background="#FF555555" Foreground="White" BorderThickness="0" CornerRadius="4"
                            FontSize="14" FontWeight="SemiBold"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Integration Tests Section -->
            <StackPanel Spacing="8">
                <TextBlock Text="INTEGRATION TESTS" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="#FFD700" 
                          Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button x:Name="TestCombatButton" Content="Combat" Width="120" Height="35"
                            Background="#FF555555" Foreground="White" BorderThickness="0" CornerRadius="4"
                            FontSize="14" FontWeight="SemiBold"/>
                    <Button x:Name="TestDungeonButton" Content="Dungeon" Width="120" Height="35"
                            Background="#FF555555" Foreground="White" BorderThickness="0" CornerRadius="4"
                            FontSize="14" FontWeight="SemiBold"/>
                    <Button x:Name="TestGameplayFlowButton" Content="Gameplay Flow" Width="140" Height="35"
                            Background="#FF555555" Foreground="White" BorderThickness="0" CornerRadius="4"
                            FontSize="14" FontWeight="SemiBold"/>
                    <Button x:Name="TestAllButton" Content="Run All" Width="120" Height="35"
                            Background="#FF0078D4" Foreground="White" BorderThickness="0" CornerRadius="4"
                            FontSize="14" FontWeight="SemiBold"/>
                    <Button x:Name="TestClearOutputButton" Content="Clear" Width="80" Height="35"
                            Background="#FF404040" Foreground="White" BorderThickness="0" CornerRadius="4"
                            FontSize="14" FontWeight="SemiBold"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        
        <!-- Test Output - Scrollable text box, constrained to available space -->
        <ScrollViewer Grid.Row="1"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch">
            <TextBox x:Name="TestOutputTextBox"
                     IsReadOnly="True"
                     Focusable="False"
                     IsHitTestVisible="False"
                     TextWrapping="Wrap"
                     Background="#FF1A1A1A"
                     Foreground="White"
                     BorderThickness="1"
                     BorderBrush="#FF555555"
                     Padding="10"
                     FontFamily="Consolas"
                     FontSize="12"
                     AcceptsReturn="True"
                     MinHeight="200"/>
        </ScrollViewer>
        
        <!-- Status - Fixed at bottom -->
        <StackPanel Grid.Row="2" Spacing="10" Margin="0,10,0,0" VerticalAlignment="Bottom">
            <TextBlock x:Name="TestOutputProgressText"
                       Text="Ready"
                       Foreground="White"
                       FontSize="14"/>
        </StackPanel>
    </Grid>
</UserControl>

