<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:settings="clr-namespace:RPGGame.UI.Avalonia.Settings"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="RPGGame.UI.Avalonia.Settings.ItemModifiersSettingsPanel"
             Background="Transparent">
    <UserControl.Styles>
        <!-- ComboBox dropdown item styles for better readability -->
        <Style Selector="ComboBoxItem">
            <Setter Property="Background" Value="#FF2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style Selector="ComboBoxItem:pointerover">
            <Setter Property="Background" Value="#FF3A3A3A"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ComboBoxItem:selected">
            <Setter Property="Background" Value="#FF4A4A4A"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ComboBoxItem:selected:pointerover">
            <Setter Property="Background" Value="#FF5A5A5A"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <!-- Style the popup background -->
        <Style Selector="ComboBox /template/ Popup#PART_Popup Border">
            <Setter Property="Background" Value="#FF2A2A2A"/>
        </Style>
    </UserControl.Styles>
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Disabled">
        <StackPanel Spacing="20" Margin="20">
            <!-- Header -->
            <Border Background="White" 
                    BorderBrush="#FF404040" 
                    BorderThickness="1" 
                    CornerRadius="6" 
                    Padding="18">
                <StackPanel Spacing="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Spacing="10">
                            <TextBlock Text="Item Modifier Management" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="Black" 
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Manage item modifiers: add new modifiers, edit existing ones, or delete them. Changes will be saved to Modifications.json when you click Save." 
                                       FontSize="14" 
                                       Foreground="#FF666666" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal" 
                                    Spacing="10"
                                    VerticalAlignment="Top">
                            <Button x:Name="AddModifierButton"
                                    Content="Add Modifier"
                                    Width="120"
                                    Height="35"
                                    Background="#FF4CAF50"
                                    Foreground="White"
                                    BorderThickness="0"
                                    CornerRadius="3"
                                    FontSize="13"
                                    Cursor="Hand"/>
                            <Button x:Name="EditModifierButton"
                                    Content="Edit Selected"
                                    Width="120"
                                    Height="35"
                                    Background="#FF2196F3"
                                    Foreground="White"
                                    BorderThickness="0"
                                    CornerRadius="3"
                                    FontSize="13"
                                    Cursor="Hand"
                                    IsEnabled="False"/>
                            <Button x:Name="DeleteModifierButton"
                                    Content="Delete Selected"
                                    Width="120"
                                    Height="35"
                                    Background="#FFF44336"
                                    Foreground="White"
                                    BorderThickness="0"
                                    CornerRadius="3"
                                    FontSize="13"
                                    Cursor="Hand"
                                    IsEnabled="False"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Modifiers by Rarity -->
            <ItemsControl x:Name="RarityGroupsItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="settings:RarityGroupViewModel">
                        <Border Background="White" 
                                BorderBrush="#FF404040" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="18"
                                Margin="0,0,0,15">
                            <StackPanel Spacing="12">
                                <TextBlock Text="{Binding RarityName}" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="Black" 
                                           Margin="0,0,0,8"/>
                                <ItemsControl ItemsSource="{Binding Modifiers}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="settings:ModifierViewModel">
                                            <Border Background="{Binding BackgroundColor}"
                                                    BorderBrush="#FF404040"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Padding="8"
                                                    Margin="0,0,0,8"
                                                    Cursor="Hand"
                                                    PointerPressed="OnModifierPointerPressed">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="200"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding Name}" 
                                                               FontSize="14" 
                                                               FontWeight="SemiBold"
                                                               Foreground="Black"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,10,0"
                                                               MinWidth="120"/>
                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding Description}" 
                                                               FontSize="13" 
                                                               Foreground="#FF666666"
                                                               VerticalAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Margin="0,0,10,0"/>
                                                    <TextBlock Grid.Column="2"
                                                               Text="Rarity:" 
                                                               FontSize="13" 
                                                               Foreground="Black"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,8,0"/>
                                                    <ComboBox Grid.Column="3"
                                                              SelectedItem="{Binding SelectedRarity, Mode=TwoWay}"
                                                              ItemsSource="{Binding AvailableRarities}"
                                                              Background="#FF2A2A2A"
                                                              Foreground="White"
                                                              BorderBrush="#FF555555"
                                                              BorderThickness="1"
                                                              Padding="6,4"
                                                              FontSize="13"
                                                              VerticalAlignment="Center">
                                                        <ComboBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding}" Foreground="White" FontSize="13"/>
                                                            </DataTemplate>
                                                        </ComboBox.ItemTemplate>
                                                    </ComboBox>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>

