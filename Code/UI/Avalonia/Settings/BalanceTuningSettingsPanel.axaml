<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="RPGGame.UI.Avalonia.Settings.BalanceTuningSettingsPanel"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Disabled">
        <StackPanel Spacing="20" Margin="20">
            <!-- Header -->
            <Border Background="White" 
                    BorderBrush="#FF404040" 
                    BorderThickness="1" 
                    CornerRadius="6" 
                    Padding="18">
                <StackPanel Spacing="10">
                    <TextBlock Text="Balance Tuning Settings Export/Import" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="Black" 
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Export your balance tuning settings to share with other players, or import settings from other players." 
                               FontSize="14" 
                               Foreground="#FF555555" 
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Export Section -->
            <Border Background="White" 
                    BorderBrush="#FF404040" 
                    BorderThickness="1" 
                    CornerRadius="6" 
                    Padding="18">
                <StackPanel Spacing="15">
                    <TextBlock Text="Export Settings" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="Black" 
                               Margin="0,0,0,8"/>
                    
                    <StackPanel Spacing="10">
                        <TextBlock Text="Export Name:" 
                                   FontSize="14" 
                                   Foreground="Black"/>
                        <TextBox x:Name="ExportNameTextBox"
                                 Text="Balance Tuning Settings"
                                 FontSize="14"
                                 Padding="8"
                                 Background="#FFF5F5F5"
                                 BorderBrush="#FFCCCCCC"
                                 BorderThickness="1"/>
                    </StackPanel>

                    <StackPanel Spacing="10">
                        <TextBlock Text="Description (optional):" 
                                   FontSize="14" 
                                   Foreground="Black"/>
                        <TextBox x:Name="ExportDescriptionTextBox"
                                 Text=""
                                 FontSize="14"
                                 Padding="8"
                                 Background="#FFF5F5F5"
                                 BorderBrush="#FFCCCCCC"
                                 BorderThickness="1"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 MinHeight="60"/>
                    </StackPanel>

                    <StackPanel Spacing="10">
                        <TextBlock Text="Created By (optional):" 
                                   FontSize="14" 
                                   Foreground="Black"/>
                        <TextBox x:Name="ExportCreatedByTextBox"
                                 Text=""
                                 FontSize="14"
                                 Padding="8"
                                 Background="#FFF5F5F5"
                                 BorderBrush="#FFCCCCCC"
                                 BorderThickness="1"/>
                    </StackPanel>

                    <StackPanel Spacing="10">
                        <TextBlock Text="Notes (optional):" 
                                   FontSize="14" 
                                   Foreground="Black"/>
                        <TextBox x:Name="ExportNotesTextBox"
                                 Text=""
                                 FontSize="14"
                                 Padding="8"
                                 Background="#FFF5F5F5"
                                 BorderBrush="#FFCCCCCC"
                                 BorderThickness="1"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 MinHeight="60"/>
                    </StackPanel>

                    <StackPanel Spacing="10">
                        <TextBlock Text="Export File Path:" 
                                   FontSize="14" 
                                   Foreground="Black"/>
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBox x:Name="ExportFilePathTextBox"
                                     Grid.Column="0"
                                     Text=""
                                     FontSize="14"
                                     Padding="8"
                                     Background="#FFF5F5F5"
                                     BorderBrush="#FFCCCCCC"
                                     BorderThickness="1"
                                     Margin="0,0,10,0"/>
                            <Button x:Name="BrowseExportPathButton"
                                    Grid.Column="1"
                                    Content="Browse..."
                                    Width="100"
                                    Height="35"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Background="#FF0078D4"
                                    Foreground="White"
                                    BorderThickness="0"
                                    CornerRadius="4"/>
                        </Grid>
                    </StackPanel>

                    <Button x:Name="ExportButton"
                            Content="Export Settings"
                            Width="200"
                            Height="40"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Background="#FF28A745"
                            Foreground="White"
                            BorderThickness="0"
                            CornerRadius="4"
                            HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>

            <!-- Import Section -->
            <Border Background="White" 
                    BorderBrush="#FF404040" 
                    BorderThickness="1" 
                    CornerRadius="6" 
                    Padding="18">
                <StackPanel Spacing="15">
                    <TextBlock Text="Import Settings" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="Black" 
                               Margin="0,0,0,8"/>
                    
                    <StackPanel Spacing="10">
                        <TextBlock Text="Import File Path:" 
                                   FontSize="14" 
                                   Foreground="Black"/>
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBox x:Name="ImportFilePathTextBox"
                                     Grid.Column="0"
                                     Text=""
                                     FontSize="14"
                                     Padding="8"
                                     Background="#FFF5F5F5"
                                     BorderBrush="#FFCCCCCC"
                                     BorderThickness="1"
                                     Margin="0,0,10,0"/>
                            <Button x:Name="BrowseImportPathButton"
                                    Grid.Column="1"
                                    Content="Browse..."
                                    Width="100"
                                    Height="35"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Background="#FF0078D4"
                                    Foreground="White"
                                    BorderThickness="0"
                                    CornerRadius="4"/>
                        </Grid>
                    </StackPanel>

                    <!-- Import Preview -->
                    <Border Background="#FFF5F5F5"
                            BorderBrush="#FFCCCCCC"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12"
                            IsVisible="False"
                            x:Name="ImportPreviewBorder">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Import Preview" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="Black"/>
                            <TextBlock x:Name="ImportPreviewName"
                                       FontSize="14" 
                                       Foreground="Black"/>
                            <TextBlock x:Name="ImportPreviewDescription"
                                       FontSize="12" 
                                       Foreground="#FF555555"
                                       TextWrapping="Wrap"/>
                            <TextBlock x:Name="ImportPreviewCreatedBy"
                                       FontSize="12" 
                                       Foreground="#FF555555"/>
                            <TextBlock x:Name="ImportPreviewDate"
                                       FontSize="12" 
                                       Foreground="#FF555555"/>
                        </StackPanel>
                    </Border>

                    <Button x:Name="ImportButton"
                            Content="Import Settings"
                            Width="200"
                            Height="40"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Background="#FFDC3545"
                            Foreground="White"
                            BorderThickness="0"
                            CornerRadius="4"
                            HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>

            <!-- Status Messages -->
            <Border Background="#FFF5F5F5"
                    BorderBrush="#FFCCCCCC"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    x:Name="StatusBorder"
                    IsVisible="False">
                <TextBlock x:Name="StatusTextBlock"
                           FontSize="14"
                           Foreground="Black"
                           TextWrapping="Wrap"/>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>

