<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1728" d:DesignHeight="972"
             x:Class="RPGGame.UI.Avalonia.SettingsPanel"
             Background="#FF1A1A1A"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <UserControl.Styles>
        <!-- Aggressive style overrides to force dark background on TextBox -->
        <!-- Target the TextBox and its internal template parts -->
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#FF2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
            <Setter Property="SelectionBrush" Value="#FF0078D4"/>
            <Setter Property="SelectionForegroundBrush" Value="White"/>
        </Style>
        <Style Selector="TextBox:focus">
            <Setter Property="Background" Value="#FF2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF0078D4"/>
        </Style>
        <Style Selector="TextBox:pointerover">
            <Setter Property="Background" Value="#FF353535"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF555555"/>
        </Style>
        <Style Selector="TextBox:pointerover:focus">
            <Setter Property="Background" Value="#FF2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF0078D4"/>
        </Style>
        <!-- Target the internal border element that might have white background -->
        <Style Selector="TextBox /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="#FF2A2A2A"/>
        </Style>
        <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="#FF2A2A2A"/>
        </Style>
        <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="#FF353535"/>
        </Style>
        <Style Selector="TextBox:pointerover:focus /template/ Border#PART_BorderElement">
            <Setter Property="Background" Value="#FF2A2A2A"/>
        </Style>
        <!-- ListBox item styles -->
        <Style Selector="ListBoxItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        <Style Selector="ListBoxItem:selected">
            <Setter Property="Foreground" Value="#FFD700"/>
            <Setter Property="Background" Value="#FF2A2A2A"/>
        </Style>
        <Style Selector="ListBoxItem:pointerover">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Background" Value="#FF353535"/>
        </Style>
    </UserControl.Styles>
    <Grid Margin="20"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0"
                   Text="GAME SETTINGS" 
                   FontSize="32" 
                   FontWeight="Bold" 
                   Foreground="#FFD700" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
        
        <!-- Category Navigation Sidebar -->
        <ListBox x:Name="CategoryListBox"
                 Grid.Column="0" Grid.Row="1"
                 Background="Transparent"
                 BorderThickness="0"
                 SelectionMode="Single">
            <ListBoxItem Content="Gameplay" Tag="Gameplay"/>
            <ListBoxItem Content="Game Variables" Tag="GameVariables"/>
            <ListBoxItem Content="Actions" Tag="Actions"/>
            <ListBoxItem Content="Text Delays" Tag="TextDelays"/>
            <ListBoxItem Content="Appearance" Tag="Appearance"/>
            <ListBoxItem Content="Item Modifiers" Tag="ItemModifiers"/>
            <ListBoxItem Content="Items" Tag="Items"/>
            <ListBoxItem Content="Import" Tag="BalanceTuning"/>
            <ListBoxItem Content="Testing" Tag="Testing"/>
            <ListBoxItem Content="About" Tag="About"/>
        </ListBox>
        
        <!-- Content Area with ScrollViewer for regular panels -->
        <ScrollViewer x:Name="ContentScrollViewer"
                     Grid.Column="2" Grid.Row="1"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled">
            <ContentControl x:Name="ContentArea"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch">
                <!-- Selected category panel will be displayed here -->
            </ContentControl>
        </ScrollViewer>
        
        <!-- Content Area without ScrollViewer for Testing panel (handles its own scrolling) -->
        <ContentControl x:Name="TestingContentArea"
                       Grid.Column="2" Grid.Row="1"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       IsVisible="False">
            <!-- Testing panel will be displayed here without parent ScrollViewer -->
        </ContentControl>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10"
                    Margin="0,20,0,0">
            <Button x:Name="SaveButton"
                    Content="Save"
                    Width="100"
                    Height="40"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Background="#FF0078D4"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="4"/>
            <Button x:Name="ResetButton"
                    Content="Reset"
                    Width="100"
                    Height="40"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Background="#FF555555"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="4"/>
            <Button x:Name="BackButton"
                    Content="Close"
                    Width="100"
                    Height="40"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Background="#FF404040"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="4"/>
        </StackPanel>
    </Grid>
</UserControl>
