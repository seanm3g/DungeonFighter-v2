<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="RPGGame.UI.Avalonia.SettingsPanel"
             Background="#FF1A1A1A"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <Grid Margin="25"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="GAME SETTINGS" 
                   FontSize="32" 
                   FontWeight="Bold" 
                   Foreground="#FFD700" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,25"/>
        
        <!-- Main Content Area with Tabs -->
        <TabControl x:Name="SettingsTabControl"
                    Grid.Row="1" 
                    Background="Transparent"
                    BorderThickness="0">
            <TabControl.Styles>
                <Style Selector="TabItem">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="15,8"/>
                </Style>
                <Style Selector="TabItem:selected">
                    <Setter Property="Foreground" Value="#FFD700"/>
                </Style>
                <Style Selector="TabItem:pointerover">
                    <Setter Property="Foreground" Value="#FFE5B800"/>
                </Style>
            </TabControl.Styles>
            <TabItem Header="Gameplay">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Narrative Settings - Left Column -->
                        <Border Grid.Column="0"
                                Background="#FF252525" 
                                BorderBrush="#FF404040" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="18">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Narrative Settings" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="#FFD700" 
                                           Margin="0,0,0,8"/>
                                
                                <!-- Narrative Balance Slider -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="8">
                                        <TextBlock Text="Narrative Balance:" 
                                                   Foreground="#FFE0E0E0" 
                                                   FontSize="15"/>
                                        <Slider x:Name="NarrativeBalanceSlider" 
                                                Minimum="0" 
                                                Maximum="1" 
                                                Value="0.8"
                                                TickFrequency="0.1"
                                                VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBox x:Name="NarrativeBalanceTextBox" 
                                             Grid.Column="1" 
                                             Width="75"
                                             Height="28"
                                             Margin="5,0,0,0"
                                             Background="#FF2A2A2A"
                                             Foreground="White"
                                             BorderBrush="#FF555555"
                                             BorderThickness="1"
                                             Padding="6,4"
                                             FontSize="14"
                                             VerticalAlignment="Center"/>
                                </Grid>
                                
                                <CheckBox x:Name="EnableNarrativeEventsCheckBox" 
                                          Content="Enable Narrative Events" 
                                          Foreground="#FFE0E0E0"
                                          FontSize="15"
                                          IsChecked="True"/>
                                
                                <CheckBox x:Name="EnableInformationalSummariesCheckBox" 
                                          Content="Enable Informational Summaries" 
                                          Foreground="#FFE0E0E0"
                                          FontSize="15"
                                          IsChecked="True"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Combat Settings - Middle Column -->
                        <Border Grid.Column="2"
                                Background="#FF252525" 
                                BorderBrush="#FF404040" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="18">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Combat Settings" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="#FFD700" 
                                           Margin="0,0,0,8"/>
                                
                                <!-- Combat Speed Slider -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="8">
                                        <TextBlock Text="Combat Speed:" 
                                                   Foreground="#FFE0E0E0" 
                                                   FontSize="15"/>
                                        <Slider x:Name="CombatSpeedSlider" 
                                                Minimum="0.5" 
                                                Maximum="2.0" 
                                                Value="1.0"
                                                TickFrequency="0.1"
                                                VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBox x:Name="CombatSpeedTextBox" 
                                             Grid.Column="1" 
                                             Width="75"
                                             Height="28"
                                             Margin="5,0,0,0"
                                             Background="#FF2A2A2A"
                                             Foreground="White"
                                             BorderBrush="#FF555555"
                                             BorderThickness="1"
                                             Padding="6,4"
                                             FontSize="14"
                                             VerticalAlignment="Center"/>
                                </Grid>
                                
                                <CheckBox x:Name="ShowIndividualActionMessagesCheckBox" 
                                          Content="Show Individual Action Messages" 
                                          Foreground="#FFE0E0E0"
                                          FontSize="15"
                                          IsChecked="False"/>
                                
                                <CheckBox x:Name="EnableComboSystemCheckBox" 
                                          Content="Enable Combo System" 
                                          Foreground="#FFE0E0E0"
                                          FontSize="15"
                                          IsChecked="True"/>
                                
                                <CheckBox x:Name="EnableTextDisplayDelaysCheckBox" 
                                          Content="Enable Text Display Delays" 
                                          Foreground="#FFE0E0E0"
                                          FontSize="15"
                                          IsChecked="True"/>
                                
                                <CheckBox x:Name="FastCombatCheckBox" 
                                          Content="Fast Combat (No Delays)" 
                                          Foreground="#FFE0E0E0"
                                          FontSize="15"
                                          IsChecked="False"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Gameplay Settings - Right Column -->
                        <Border Grid.Column="4"
                                Background="#FF252525" 
                                BorderBrush="#FF404040" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="18">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Gameplay Settings" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="#FFD700" 
                                           Margin="0,0,0,8"/>
                                
                                <CheckBox x:Name="EnableAutoSaveCheckBox" 
                                          Content="Enable Auto Save" 
                                          Foreground="White"
                                          FontSize="15"
                                          IsChecked="True"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Auto Save Interval:" 
                                               Foreground="#FFE0E0E0" 
                                               FontSize="15"
                                               VerticalAlignment="Center"/>
                                    <TextBox x:Name="AutoSaveIntervalTextBox" 
                                             Grid.Column="1" 
                                             Width="75"
                                             Height="28"
                                             HorizontalAlignment="Right"
                                             Background="#FF2A2A2A"
                                             Foreground="White"
                                             BorderBrush="#FF555555"
                                             BorderThickness="1"
                                             Padding="6,4"
                                             FontSize="15"
                                             Text="5"/>
                                </Grid>
                                
                                <CheckBox x:Name="ShowDetailedStatsCheckBox" 
                                          Content="Show Detailed Stats" 
                                          Foreground="#FFE0E0E0"
                                          FontSize="15"
                                          IsChecked="True"/>
                                
                                <CheckBox x:Name="EnableSoundEffectsCheckBox" 
                                          Content="Enable Sound Effects" 
                                          Foreground="#FFE0E0E0"
                                          FontSize="15"
                                          IsChecked="False"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            
            <TabItem Header="Difficulty">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Enemy Multipliers - Left Column -->
                        <Border Grid.Column="0"
                                Background="#FF252525" 
                                BorderBrush="#FF404040" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="18">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Enemy Multipliers" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="#FFD700" 
                                           Margin="0,0,0,8"/>
                                
                                <!-- Enemy Health Multiplier -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="8">
                                        <TextBlock Text="Enemy Health:" 
                                                   Foreground="#FFE0E0E0" 
                                                   FontSize="15"/>
                                        <Slider x:Name="EnemyHealthMultiplierSlider" 
                                                Minimum="0.5" 
                                                Maximum="3.0" 
                                                Value="1.0"
                                                TickFrequency="0.1"
                                                VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBox x:Name="EnemyHealthMultiplierTextBox" 
                                             Grid.Column="1" 
                                             Width="75"
                                             Height="28"
                                             Margin="5,0,0,0"
                                             Background="#FF2A2A2A"
                                             Foreground="White"
                                             BorderBrush="#FF555555"
                                             BorderThickness="1"
                                             Padding="6,4"
                                             FontSize="14"
                                             VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- Enemy Damage Multiplier -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="8">
                                        <TextBlock Text="Enemy Damage:" 
                                                   Foreground="#FFE0E0E0" 
                                                   FontSize="15"/>
                                        <Slider x:Name="EnemyDamageMultiplierSlider" 
                                                Minimum="0.5" 
                                                Maximum="3.0" 
                                                Value="1.0"
                                                TickFrequency="0.1"
                                                VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBox x:Name="EnemyDamageMultiplierTextBox" 
                                             Grid.Column="1" 
                                             Width="75"
                                             Height="28"
                                             Margin="5,0,0,0"
                                             Background="#FF2A2A2A"
                                             Foreground="White"
                                             BorderBrush="#FF555555"
                                             BorderThickness="1"
                                             Padding="6,4"
                                             FontSize="14"
                                             VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Player Multipliers - Right Column -->
                        <Border Grid.Column="2"
                                Background="#FF252525" 
                                BorderBrush="#FF404040" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="18">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Player Multipliers" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="#FFD700" 
                                           Margin="0,0,0,8"/>
                                
                                <!-- Player Health Multiplier -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="8">
                                        <TextBlock Text="Player Health:" 
                                                   Foreground="#FFE0E0E0" 
                                                   FontSize="15"/>
                                        <Slider x:Name="PlayerHealthMultiplierSlider" 
                                                Minimum="0.5" 
                                                Maximum="3.0" 
                                                Value="1.0"
                                                TickFrequency="0.1"
                                                VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBox x:Name="PlayerHealthMultiplierTextBox" 
                                             Grid.Column="1" 
                                             Width="75"
                                             Height="28"
                                             Margin="5,0,0,0"
                                             Background="#FF2A2A2A"
                                             Foreground="White"
                                             BorderBrush="#FF555555"
                                             BorderThickness="1"
                                             Padding="6,4"
                                             FontSize="14"
                                             VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- Player Damage Multiplier -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="8">
                                        <TextBlock Text="Player Damage:" 
                                                   Foreground="#FFE0E0E0" 
                                                   FontSize="15"/>
                                        <Slider x:Name="PlayerDamageMultiplierSlider" 
                                                Minimum="0.5" 
                                                Maximum="3.0" 
                                                Value="1.0"
                                                TickFrequency="0.1"
                                                VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBox x:Name="PlayerDamageMultiplierTextBox" 
                                             Grid.Column="1" 
                                             Width="75"
                                             Height="28"
                                             Margin="5,0,0,0"
                                             Background="#FF2A2A2A"
                                             Foreground="White"
                                             BorderBrush="#FF555555"
                                             BorderThickness="1"
                                             Padding="6,4"
                                             FontSize="14"
                                             VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            
            <TabItem Header="UI">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- UI Display Settings - Left Column -->
                        <Border Grid.Column="0"
                                Background="#FF252525" 
                                BorderBrush="#FF404040" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="18">
                            <StackPanel Spacing="12">
                                <TextBlock Text="UI Display Settings" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="#FFD700" 
                                           Margin="0,0,0,8"/>
                                
                                <CheckBox x:Name="ShowHealthBarsCheckBox" 
                                          Content="Show Health Bars" 
                                          Foreground="#FFE0E0E0"
                                          FontSize="15"
                                          IsChecked="True"/>
                                
                                <CheckBox x:Name="ShowDamageNumbersCheckBox" 
                                          Content="Show Damage Numbers" 
                                          Foreground="#FFE0E0E0"
                                          FontSize="15"
                                          IsChecked="True"/>
                                
                                <CheckBox x:Name="ShowComboProgressCheckBox" 
                                          Content="Show Combo Progress" 
                                          Foreground="#FFE0E0E0"
                                          FontSize="15"
                                          IsChecked="True"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Placeholder for future UI settings - Right Column -->
                        <Border Grid.Column="2"
                                Background="#FF252525" 
                                BorderBrush="#FF404040" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="18">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Additional UI Settings" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="#FFD700" 
                                           Margin="0,0,0,8"/>
                                
                                <TextBlock Text="More UI customization options will be added here in future updates." 
                                           Foreground="#FFAAAAAA"
                                           FontSize="14"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            
            <TabItem Header="Testing">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="600"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left side: Test Categories -->
                    <ScrollViewer Grid.Column="0" 
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Spacing="16" Margin="12">
                            <!-- Quick Tests Section -->
                            <Expander Header="Quick Tests" 
                                    IsExpanded="True"
                                    Foreground="#FFD700"
                                    FontSize="16"
                                    FontWeight="SemiBold">
                                <StackPanel Spacing="8" Margin="10,6,0,0">
                                    <Button x:Name="RunAllTestsButton" 
                                            Content="Run All Tests (Complete Suite)" 
                                            Height="36"
                                            Background="#FF4A90E2"
                                            Foreground="White"
                                            BorderThickness="0"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            FontSize="15"
                                            Padding="12,8"
                                            Margin="0,0,0,6">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#FF5BA0F2"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                    
                                    <Button x:Name="ColorSystemTestsButton" 
                                            Content="Color System Tests" 
                                            Height="36"
                                            Background="#FF4A90E2"
                                            Foreground="White"
                                            BorderThickness="0"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            FontSize="15"
                                            Padding="12,8">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#FF5BA0F2"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                </StackPanel>
                            </Expander>
                            
                            <!-- System Tests Section -->
                            <Expander Header="System Tests" 
                                    IsExpanded="False"
                                    Foreground="#FFD700"
                                    FontSize="16"
                                    FontWeight="SemiBold">
                                <StackPanel Spacing="8" Margin="10,6,0,0">
                                    <Button x:Name="CharacterSystemTestsButton" 
                                            Content="Character System Tests" 
                                            Height="36"
                                            Background="#FF4A90E2"
                                            Foreground="White"
                                            BorderThickness="0"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            FontSize="15"
                                            Padding="12,8"
                                            Margin="0,0,0,6">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#FF5BA0F2"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                    
                                    <Button x:Name="CombatSystemTestsButton" 
                                            Content="Combat System Tests (includes UI Fixes)" 
                                            Height="36"
                                            Background="#FF4A90E2"
                                            Foreground="White"
                                            BorderThickness="0"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            FontSize="15"
                                            Padding="12,8"
                                            Margin="0,0,0,6">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#FF5BA0F2"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                    
                                    <Button x:Name="InventoryDungeonTestsButton" 
                                            Content="Inventory &amp; Dungeon Tests" 
                                            Height="36"
                                            Background="#FF4A90E2"
                                            Foreground="White"
                                            BorderThickness="0"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            FontSize="15"
                                            Padding="12,8"
                                            Margin="0,0,0,6">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#FF5BA0F2"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                    
                                    <Button x:Name="DataUITestsButton" 
                                            Content="Data &amp; UI System Tests" 
                                            Height="36"
                                            Background="#FF4A90E2"
                                            Foreground="White"
                                            BorderThickness="0"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            FontSize="15"
                                            Padding="12,8"
                                            Margin="0,0,0,6">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#FF5BA0F2"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                    
                                    <Button x:Name="ActionSystemTestsButton" 
                                            Content="Action System Tests" 
                                            Height="36"
                                            Background="#FF4A90E2"
                                            Foreground="White"
                                            BorderThickness="0"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            FontSize="15"
                                            Padding="12,8"
                                            Margin="0,0,0,6">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#FF5BA0F2"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                    
                                    <Button x:Name="AdvancedIntegrationTestsButton" 
                                            Content="Advanced &amp; Integration Tests" 
                                            Height="36"
                                            Background="#FF4A90E2"
                                            Foreground="White"
                                            BorderThickness="0"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            FontSize="15"
                                            Padding="12,8">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#FF5BA0F2"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                </StackPanel>
                            </Expander>
                            
                            <!-- Item Tests Section -->
                            <Expander Header="Item Tests" 
                                    IsExpanded="False"
                                    Foreground="#FFD700"
                                    FontSize="16"
                                    FontWeight="SemiBold">
                                <StackPanel Spacing="8" Margin="10,6,0,0">
                                    <Button x:Name="GenerateRandomItemsButton" 
                                            Content="Generate 10 Random Items" 
                                            Height="36"
                                            Background="#FF4A90E2"
                                            Foreground="White"
                                            BorderThickness="0"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            FontSize="15"
                                            Padding="12,8"
                                            Margin="0,0,0,6">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#FF5BA0F2"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                    
                                    <Button x:Name="ItemGenerationAnalysisButton" 
                                            Content="Item Generation Analysis (100 items per level 1-20)" 
                                            Height="36"
                                            Background="#FF4A90E2"
                                            Foreground="White"
                                            BorderThickness="0"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            FontSize="15"
                                            Padding="12,8"
                                            Margin="0,0,0,6">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#FF5BA0F2"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                    
                                    <Button x:Name="TierDistributionTestButton" 
                                            Content="Tier Distribution Verification" 
                                            Height="36"
                                            Background="#FF4A90E2"
                                            Foreground="White"
                                            BorderThickness="0"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            FontSize="15"
                                            Padding="12,8"
                                            Margin="0,0,0,6">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#FF5BA0F2"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                    
                                    <Button x:Name="CommonItemModificationTestButton" 
                                            Content="Common Item Modification Chance (25% verification)" 
                                            Height="36"
                                            Background="#FF4A90E2"
                                            Foreground="White"
                                            BorderThickness="0"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            FontSize="15"
                                            Padding="12,8">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#FF5BA0F2"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                </StackPanel>
                            </Expander>
                            
                            <!-- Developer Tools Tests Section -->
                            <Expander Header="Developer Tools Tests" 
                                    IsExpanded="False"
                                    Foreground="#FFD700"
                                    FontSize="16"
                                    FontWeight="SemiBold">
                                <StackPanel Spacing="8" Margin="10,6,0,0">
                                    <Button x:Name="ActionEditorTestsButton" 
                                            Content="Action Editor Tests (Create, Update, Delete, Validation)" 
                                            Height="36"
                                            Background="#FF4A90E2"
                                            Foreground="White"
                                            BorderThickness="0"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            FontSize="15"
                                            Padding="12,8">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#FF5BA0F2"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                </StackPanel>
                            </Expander>
                        </StackPanel>
                    </ScrollViewer>
                    
                    <!-- Right side: Test Output -->
                    <Border Grid.Column="1" 
                            Background="#FF1F1F1F" 
                            BorderBrush="#FF404040" 
                            BorderThickness="1" 
                            CornerRadius="6" 
                            Margin="12,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="Test Output" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#FFD700" 
                                       Margin="12,12,12,8"/>
                            
                            <ScrollViewer x:Name="TestOutputScrollViewer"
                                         Grid.Row="1" 
                                         VerticalScrollBarVisibility="Auto"
                                         HorizontalScrollBarVisibility="Disabled"
                                         Margin="12,0,12,12">
                                <TextBlock x:Name="TestOutputTextBlock" 
                                           Text="Test results will appear here..." 
                                           Foreground="#FFE0E0E0"
                                           TextWrapping="Wrap"
                                           FontFamily="Consolas"
                                           FontSize="14"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            
            <TabItem Header="Game Variables"
                     x:Name="GameVariablesTab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Category List -->
                    <Border Grid.Column="0" 
                            Background="#FF2A2A2A" 
                            BorderBrush="#FF555555" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Margin="0,0,10,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="Categories" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       Margin="8,6,8,6"/>
                            
                            <ListBox x:Name="GameVariablesCategoryListBox" 
                                     Grid.Row="1" 
                                     Background="Transparent" 
                                     BorderThickness="0"
                                     SelectionMode="Single"
                                     Margin="4">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" 
                                                   Foreground="White" 
                                                   Padding="4,3"
                                                   FontSize="14"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.Styles>
                                    <Style Selector="ListBoxItem:selected">
                                        <Setter Property="Background" Value="#FF4A4A4A"/>
                                    </Style>
                                    <Style Selector="ListBoxItem:pointerover">
                                        <Setter Property="Background" Value="#FF3A3A3A"/>
                                    </Style>
                                </ListBox.Styles>
                            </ListBox>
                        </Grid>
                    </Border>
                    
                    <!-- Variables Panel -->
                    <ScrollViewer Grid.Column="1" 
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="GameVariablesPanel" 
                                    Spacing="2">
                            <!-- Variables will be added here dynamically -->
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            
            <TabItem Header="Actions"
                     x:Name="ActionsTab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Actions List -->
                    <Border Grid.Column="0" 
                            Background="#FF2A2A2A" 
                            BorderBrush="#FF555555" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Margin="0,0,10,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="Actions" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       Margin="10,10,10,10"/>
                            
                            <StackPanel Grid.Row="1" 
                                        Orientation="Horizontal" 
                                        Spacing="5" 
                                        Margin="10,0,10,10">
                                <Button x:Name="CreateActionButton" 
                                        Content="New" 
                                        Width="70"
                                        Height="30"
                                        Background="#FF4CAF50"
                                        Foreground="White"
                                        BorderThickness="0"
                                        CornerRadius="3"
                                        Cursor="Hand"
                                        FontSize="15">
                                    <Button.Styles>
                                        <Style Selector="Button:pointerover">
                                            <Setter Property="Background" Value="#FF66BB6A"/>
                                        </Style>
                                    </Button.Styles>
                                </Button>
                                
                                <Button x:Name="DeleteActionButton" 
                                        Content="Delete" 
                                        Width="70"
                                        Height="30"
                                        Background="#FFE53935"
                                        Foreground="White"
                                        BorderThickness="0"
                                        CornerRadius="3"
                                        Cursor="Hand"
                                        FontSize="15">
                                    <Button.Styles>
                                        <Style Selector="Button:pointerover">
                                            <Setter Property="Background" Value="#FFEF5350"/>
                                        </Style>
                                    </Button.Styles>
                                </Button>
                            </StackPanel>
                            
                            <ListBox x:Name="ActionsListBox" 
                                     Grid.Row="2" 
                                     Background="Transparent" 
                                     BorderThickness="0"
                                     SelectionMode="Single"
                                     Margin="5">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" 
                                                   Foreground="White" 
                                                   Padding="5"
                                                   FontSize="14"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.Styles>
                                    <Style Selector="ListBoxItem:selected">
                                        <Setter Property="Background" Value="#FF4A4A4A"/>
                                    </Style>
                                    <Style Selector="ListBoxItem:pointerover">
                                        <Setter Property="Background" Value="#FF3A3A3A"/>
                                    </Style>
                                </ListBox.Styles>
                            </ListBox>
                        </Grid>
                    </Border>
                    
                    <!-- Action Form Panel -->
                    <ScrollViewer Grid.Column="1" 
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="ActionFormPanel" 
                                    Spacing="15" 
                                    Margin="10">
                            <!-- Action form will be added here dynamically -->
                            <TextBlock Text="Select an action from the list or click 'New' to create one" 
                                       Foreground="#FF888888" 
                                       FontSize="15"
                                       TextWrapping="Wrap"
                                       Margin="10"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            
            <TabItem Header="Battle Statistics"
                     x:Name="BattleStatisticsTab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="600"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left side: Test Controls -->
                    <ScrollViewer Grid.Column="0" 
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Spacing="18" Margin="12">
                            <!-- Test Configuration -->
                            <Border Background="#FF252525" 
                                    BorderBrush="#FF404040" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="18">
                                <StackPanel Spacing="12">
                                    <TextBlock Text="Test Configuration" 
                                               FontSize="18" 
                                               FontWeight="SemiBold" 
                                               Foreground="#FFD700" 
                                               Margin="0,0,0,8"/>
                                    
                                    <TextBlock Text="Number of Battles:" 
                                               FontSize="15" 
                                               Foreground="#FFE0E0E0" 
                                               Margin="0,0,0,4"/>
                                    <TextBox x:Name="NumberOfBattlesTextBox" 
                                             Text="100"
                                             Background="#FF2A2A2A"
                                             Foreground="White"
                                             BorderBrush="#FF555555"
                                             BorderThickness="1"
                                             Padding="6,4"
                                             FontSize="14"
                                             Margin="0,0,0,12"/>
                                    
                                    <TextBlock Text="Quick Test Options:" 
                                               FontSize="15" 
                                               FontWeight="SemiBold"
                                               Foreground="#FFE0E0E0" 
                                               Margin="0,0,0,8"/>
                                    
                                    <Button x:Name="QuickTestButton" 
                                            Content="Quick Test (100 battles)" 
                                            Height="36"
                                            Background="#FF4A90E2"
                                            Foreground="White"
                                            BorderThickness="0"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            FontSize="14"
                                            Padding="12,8"
                                            Margin="0,0,0,6">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#FF5BA0F2"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                    
                                    <Button x:Name="StandardTestButton" 
                                            Content="Standard Test (500 battles)" 
                                            Height="36"
                                            Background="#FF4A90E2"
                                            Foreground="White"
                                            BorderThickness="0"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            FontSize="14"
                                            Padding="12,8"
                                            Margin="0,0,0,6">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#FF5BA0F2"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                    
                                    <Button x:Name="ComprehensiveTestButton" 
                                            Content="Comprehensive Test (1000 battles)" 
                                            Height="36"
                                            Background="#FF4A90E2"
                                            Foreground="White"
                                            BorderThickness="0"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            FontSize="14"
                                            Padding="12,8"
                                            Margin="0,0,0,12">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#FF5BA0F2"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                    
                                    <Separator Background="#FF555555" Margin="0,8,0,8"/>
                                    
                                    <TextBlock Text="Advanced Tests:" 
                                               FontSize="15" 
                                               FontWeight="SemiBold"
                                               Foreground="#FFE0E0E0" 
                                               Margin="0,0,0,8"/>
                                    
                                    <Button x:Name="WeaponTypeTestButton" 
                                            Content="Weapon Type Tests" 
                                            Height="36"
                                            Background="#FF9B59B6"
                                            Foreground="White"
                                            BorderThickness="0"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            FontSize="14"
                                            Padding="12,8"
                                            Margin="0,0,0,6">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#FFAB69C6"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                    
                                    <Button x:Name="ComprehensiveWeaponEnemyTestButton" 
                                            Content="Comprehensive Weapon vs Enemy" 
                                            Height="36"
                                            Background="#FF9B59B6"
                                            Foreground="White"
                                            BorderThickness="0"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            FontSize="14"
                                            Padding="12,8">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#FFAB69C6"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                </StackPanel>
                            </Border>
                            
                            <!-- Progress Section -->
                            <Border Background="#FF252525" 
                                    BorderBrush="#FF404040" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="18"
                                    x:Name="ProgressBorder"
                                    IsVisible="False">
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Progress" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               Foreground="#FFD700" 
                                               Margin="0,0,0,8"/>
                                    
                                    <TextBlock x:Name="ProgressStatusText" 
                                               Text="Running tests..." 
                                               FontSize="14" 
                                               Foreground="#FFE0E0E0" 
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,8"/>
                                    
                                    <ProgressBar x:Name="ProgressBar" 
                                                 Minimum="0" 
                                                 Maximum="100" 
                                                 Value="0"
                                                 Height="24"
                                                 Margin="0,0,0,4"/>
                                    
                                    <TextBlock x:Name="ProgressPercentageText" 
                                               Text="0%" 
                                               FontSize="12" 
                                               Foreground="#FFAAAAAA" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                    
                    <!-- Right side: Results Display -->
                    <Border Grid.Column="1" 
                            Background="#FF1F1F1F" 
                            BorderBrush="#FF404040" 
                            BorderThickness="1" 
                            CornerRadius="6" 
                            Margin="12,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="Test Results" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#FFD700" 
                                       Margin="12,12,12,8"/>
                            
                            <ScrollViewer Grid.Row="1" 
                                         VerticalScrollBarVisibility="Auto"
                                         HorizontalScrollBarVisibility="Disabled"
                                         Margin="12,0,12,12">
                                <TextBlock x:Name="BattleStatisticsResultsText" 
                                           Text="Run a test to see results here..." 
                                           Foreground="#FFE0E0E0"
                                           TextWrapping="Wrap"
                                           FontFamily="Consolas"
                                           FontSize="14"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            
            <TabItem Header="About">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Game Information - Left Column -->
                        <Border Grid.Column="0"
                                Background="#FF252525" 
                                BorderBrush="#FF404040" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="20">
                            <StackPanel Spacing="15">
                                <TextBlock Text="DungeonFighter v2" 
                                           FontSize="28" 
                                           FontWeight="Bold" 
                                           Foreground="#FFD700" 
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Version 6.2 - Production Ready" 
                                           FontSize="18" 
                                           Foreground="#FFAAAAAA" 
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,20"/>
                                
                                <TextBlock Text="A sophisticated turn-based RPG/dungeon crawler game featuring advanced combat mechanics, intelligent battle narrative generation, and a comprehensive data-driven architecture." 
                                           FontSize="15" 
                                           Foreground="White" 
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,20"/>
                                
                                <Separator Background="#FF555555" Margin="0,10,0,10"/>
                                
                                <TextBlock Text="Key Features:" 
                                           FontSize="20" 
                                           FontWeight="Bold" 
                                           Foreground="#FFD700" 
                                           Margin="0,0,0,10"/>
                                
                                <StackPanel Spacing="8" Margin="10,0,0,0">
                                    <TextBlock Text=" Advanced turn-based combat system with combo mechanics" 
                                               FontSize="15" 
                                               Foreground="White"/>
                                    <TextBlock Text=" Dice-based mechanics with strategic thresholds" 
                                               FontSize="15" 
                                               Foreground="White"/>
                                    <TextBlock Text=" Dynamic narrative generation" 
                                               FontSize="15" 
                                               Foreground="White"/>
                                    <TextBlock Text=" Comprehensive item and loot system" 
                                               FontSize="15" 
                                               Foreground="White"/>
                                    <TextBlock Text=" Modular architecture with design patterns" 
                                               FontSize="15" 
                                               Foreground="White"/>
                                    <TextBlock Text=" Extensive testing and balance systems" 
                                               FontSize="15" 
                                               Foreground="White"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Technical & Settings Information - Right Column -->
                        <StackPanel Grid.Column="2" Spacing="18">
                            <!-- Technical Information -->
                            <Border Background="#FF252525" 
                                    BorderBrush="#FF404040" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="20">
                                <StackPanel Spacing="15">
                                    <TextBlock Text="Technical Information" 
                                               FontSize="20" 
                                               FontWeight="Bold" 
                                               Foreground="#FFD700" 
                                               Margin="0,0,0,10"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                                   Text="Framework:" 
                                                   FontSize="15" 
                                                   Foreground="#FFAAAAAA" 
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                                   Text=".NET 8.0" 
                                                   FontSize="15" 
                                                   Foreground="White" 
                                                   Margin="0,0,0,8"/>
                                        
                                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                                   Text="UI Framework:" 
                                                   FontSize="15" 
                                                   Foreground="#FFAAAAAA" 
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                                   Text="Avalonia UI" 
                                                   FontSize="15" 
                                                   Foreground="White" 
                                                   Margin="0,0,0,8"/>
                                        
                                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                                   Text="Language:" 
                                                   FontSize="15" 
                                                   Foreground="#FFAAAAAA" 
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                                   Text="C#" 
                                                   FontSize="15" 
                                                   Foreground="White" 
                                                   Margin="0,0,0,8"/>
                                        
                                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                                   Text="Architecture:" 
                                                   FontSize="15" 
                                                   Foreground="#FFAAAAAA"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" 
                                                   Text="Modular, Data-Driven" 
                                                   FontSize="15" 
                                                   Foreground="White"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            
                            <!-- Settings Information -->
                            <Border Background="#FF252525" 
                                    BorderBrush="#FF404040" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="20">
                                <StackPanel Spacing="10">
                                    <TextBlock Text="Settings Information" 
                                               FontSize="20" 
                                               FontWeight="Bold" 
                                               Foreground="#FFD700" 
                                               Margin="0,0,0,10"/>
                                    
                                    <TextBlock Text="All game settings are saved automatically when you click 'Save Changes'. Settings are stored in gamesettings.json and persist between game sessions." 
                                               FontSize="15" 
                                               Foreground="White" 
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,10"/>
                                    
                                    <TextBlock Text="Use the 'Reset to Defaults' button to restore all settings to their original values." 
                                               FontSize="15" 
                                               Foreground="White" 
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <!-- Settings action buttons -->
            <StackPanel 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       Spacing="12">
                <Button x:Name="ResetButton" 
                        Content="Reset to Defaults" 
                        Width="160" 
                        Height="38"
                        Background="#FF666666"
                        Foreground="White"
                        BorderThickness="0"
                        CornerRadius="4"
                        Cursor="Hand"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Padding="16,10">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#FF777777"/>
                        </Style>
                    </Button.Styles>
                </Button>
                
                <Button x:Name="BackButton" 
                        Content="Back" 
                        Width="110" 
                        Height="38"
                        Background="#FF555555"
                        Foreground="White"
                        BorderThickness="0"
                        CornerRadius="4"
                        Cursor="Hand"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Padding="16,10">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#FF666666"/>
                        </Style>
                    </Button.Styles>
                </Button>
                
                <Button x:Name="SaveButton" 
                        Content="Save Changes" 
                        Width="160" 
                        Height="38"
                        Background="#FF4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        CornerRadius="4"
                        Cursor="Hand"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Padding="16,10">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#FF66BB6A"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </StackPanel>
        </Grid>
        
        <!-- Status Message -->
        <TextBlock x:Name="StatusMessage" 
                   Grid.Row="2" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center"
                   Foreground="#FF4CAF50" 
                   FontSize="14"
                   Margin="0,20,0,0"
                   IsVisible="False"/>
    </Grid>
</UserControl>

