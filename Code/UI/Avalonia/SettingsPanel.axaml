<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="RPGGame.UI.Avalonia.SettingsPanel"
             Background="#FF1A1A1A"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <UserControl.Styles>
        <!-- Style to ensure TextBoxes maintain dark background and white text when focused -->
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#FF2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="TextBox:focus">
            <Setter Property="Background" Value="#FF2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF0078D4"/>
        </Style>
        <Style Selector="TextBox:pointerover">
            <Setter Property="Background" Value="#FF353535"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="TextBox:pointerover:focus">
            <Setter Property="Background" Value="#FF2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF0078D4"/>
        </Style>
        <!-- Override TabItem hover text color to be white -->
        <Style Selector="TabItem:pointerover">
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        <Style Selector="TabItem:pointerover TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
    </UserControl.Styles>
    <Grid Margin="25"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="GAME SETTINGS" 
                   FontSize="32" 
                   FontWeight="Bold" 
                   Foreground="#FFD700" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,25"/>
        
        <!-- Main Content Area with Tabs -->
        <TabControl x:Name="SettingsTabControl"
                    Grid.Row="1" 
                    Background="Transparent"
                    BorderThickness="0">
            <TabControl.Styles>
                <Style Selector="TabItem">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="15,8"/>
                </Style>
                <Style Selector="TabItem:selected">
                    <Setter Property="Foreground" Value="#FFD700"/>
                </Style>
                <Style Selector="TabItem:pointerover">
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                </Style>
                <Style Selector="TabItem TextBlock">
                    <Setter Property="Foreground" Value="{Binding $parent[TabItem].Foreground}"/>
                </Style>
            </TabControl.Styles>
            <TabItem Header="Gameplay">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Narrative Settings - Left Column, Top Row -->
                        <Border Grid.Column="0" Grid.Row="0"
                                Background="White" 
                                BorderBrush="#FF404040" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="18">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Narrative Settings" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="Black" 
                                           Margin="0,0,0,8"/>
                                
                                <!-- Narrative Balance Slider -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="8">
                                        <TextBlock Text="Narrative Balance:" 
                                                   Foreground="Black" 
                                                   FontSize="15"/>
                                        <Slider x:Name="NarrativeBalanceSlider" 
                                                Minimum="0" 
                                                Maximum="1" 
                                                Value="0.8"
                                                TickFrequency="0.1"
                                                VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBox x:Name="NarrativeBalanceTextBox" 
                                             Grid.Column="1" 
                                             Width="75"
                                             Height="28"
                                             Margin="5,0,0,0"
                                             Background="#FF2A2A2A"
                                             Foreground="White"
                                             BorderBrush="#FF555555"
                                             BorderThickness="1"
                                             Padding="6,4"
                                             FontSize="14"
                                             VerticalAlignment="Center"/>
                                </Grid>
                                
                                <CheckBox x:Name="EnableNarrativeEventsCheckBox" 
                                          Content="Enable Narrative Events" 
                                          Foreground="Black"
                                          FontSize="15"
                                          IsChecked="True"/>
                                
                                <CheckBox x:Name="EnableInformationalSummariesCheckBox" 
                                          Content="Enable Informational Summaries" 
                                          Foreground="Black"
                                          FontSize="15"
                                          IsChecked="True"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Combat Settings - Middle Column, Top Row -->
                        <Border Grid.Column="2" Grid.Row="0"
                                Background="White" 
                                BorderBrush="#FF404040" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="18">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Combat Settings" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="Black" 
                                           Margin="0,0,0,8"/>
                                
                                <!-- Combat Speed Slider -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="8">
                                        <TextBlock Text="Combat Speed:" 
                                                   Foreground="Black" 
                                                   FontSize="15"/>
                                        <Slider x:Name="CombatSpeedSlider" 
                                                Minimum="0.5" 
                                                Maximum="2.0" 
                                                Value="1.0"
                                                TickFrequency="0.1"
                                                VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBox x:Name="CombatSpeedTextBox" 
                                             Grid.Column="1" 
                                             Width="75"
                                             Height="28"
                                             Margin="5,0,0,0"
                                             Background="#FF2A2A2A"
                                             Foreground="White"
                                             BorderBrush="#FF555555"
                                             BorderThickness="1"
                                             Padding="6,4"
                                             FontSize="14"
                                             VerticalAlignment="Center"/>
                                </Grid>
                                
                                <CheckBox x:Name="ShowIndividualActionMessagesCheckBox" 
                                          Content="Show Individual Action Messages" 
                                          Foreground="Black"
                                          FontSize="15"
                                          IsChecked="False"/>
                                
                                <CheckBox x:Name="EnableComboSystemCheckBox" 
                                          Content="Enable Combo System" 
                                          Foreground="Black"
                                          FontSize="15"
                                          IsChecked="True"/>
                                
                                <CheckBox x:Name="EnableTextDisplayDelaysCheckBox" 
                                          Content="Enable Text Display Delays" 
                                          Foreground="Black"
                                          FontSize="15"
                                          IsChecked="True"/>
                                
                                <CheckBox x:Name="FastCombatCheckBox" 
                                          Content="Fast Combat (No Delays)" 
                                          Foreground="Black"
                                          FontSize="15"
                                          IsChecked="False"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Gameplay Settings - Right Column, Top Row -->
                        <Border Grid.Column="4" Grid.Row="0"
                                Background="White" 
                                BorderBrush="#FF404040" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="18">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Gameplay Settings" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="Black" 
                                           Margin="0,0,0,8"/>
                                
                                <CheckBox x:Name="EnableAutoSaveCheckBox" 
                                          Content="Enable Auto Save" 
                                          Foreground="Black"
                                          FontSize="15"
                                          IsChecked="True"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Auto Save Interval:" 
                                               Foreground="Black" 
                                               FontSize="15"
                                               VerticalAlignment="Center"/>
                                    <TextBox x:Name="AutoSaveIntervalTextBox" 
                                             Grid.Column="1" 
                                             Width="75"
                                             Height="28"
                                             HorizontalAlignment="Right"
                                             Background="#FF2A2A2A"
                                             Foreground="White"
                                             BorderBrush="#FF555555"
                                             BorderThickness="1"
                                             Padding="6,4"
                                             FontSize="15"
                                             Text="5"/>
                                </Grid>
                                
                                <CheckBox x:Name="ShowDetailedStatsCheckBox" 
                                          Content="Show Detailed Stats" 
                                          Foreground="Black"
                                          FontSize="15"
                                          IsChecked="True"/>
                                
                                <CheckBox x:Name="EnableSoundEffectsCheckBox" 
                                          Content="Enable Sound Effects" 
                                          Foreground="Black"
                                          FontSize="15"
                                          IsChecked="False"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- UI Display Settings - Left Column, Bottom Row -->
                        <Border Grid.Column="0" Grid.Row="2"
                                Background="White" 
                                BorderBrush="#FF404040" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="18">
                            <StackPanel Spacing="12">
                                <TextBlock Text="UI Display Settings" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="Black" 
                                           Margin="0,0,0,8"/>
                                
                                <CheckBox x:Name="ShowHealthBarsCheckBox" 
                                          Content="Show Health Bars" 
                                          Foreground="Black"
                                          FontSize="15"
                                          IsChecked="True"/>
                                
                                <CheckBox x:Name="ShowDamageNumbersCheckBox" 
                                          Content="Show Damage Numbers" 
                                          Foreground="Black"
                                          FontSize="15"
                                          IsChecked="True"/>
                                
                                <CheckBox x:Name="ShowComboProgressCheckBox" 
                                          Content="Show Combo Progress" 
                                          Foreground="Black"
                                          FontSize="15"
                                          IsChecked="True"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Animation Settings - Middle Column, Bottom Row -->
                        <Border Grid.Column="2" Grid.Row="2"
                                Background="White" 
                                BorderBrush="#FF404040" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="18">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400">
                                <StackPanel Spacing="16">
                                    <TextBlock Text="Animation Settings" 
                                               FontSize="18" 
                                               FontWeight="SemiBold" 
                                               Foreground="Black" 
                                               Margin="0,0,0,8"/>
                                    
                                    <!-- Brightness Mask Section -->
                                    <Border Background="#FFF5F5F5" 
                                            BorderBrush="#FFCCCCCC" 
                                            BorderThickness="1" 
                                            CornerRadius="4" 
                                            Padding="12">
                                        <StackPanel Spacing="10">
                                            <TextBlock Text="Brightness Mask (Wave Effect)" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold" 
                                                       Foreground="#FF333333"/>
                                            
                                            <CheckBox x:Name="BrightnessMaskEnabledCheckBox"
                                                      Content="Enable Brightness Mask" 
                                                      Foreground="Black"
                                                      FontSize="14"
                                                      IsChecked="False"/>
                                            
                                            <StackPanel Spacing="4">
                                                <TextBlock Text="Intensity (Brightness Adjustment %)" 
                                                           Foreground="#FF666666"
                                                           FontSize="12"/>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="80"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Slider x:Name="BrightnessMaskIntensitySlider"
                                                            Grid.Column="0"
                                                            Minimum="0" 
                                                            Maximum="50" 
                                                            Value="10" 
                                                            TickFrequency="5"
                                                            Margin="0,0,8,0"/>
                                                    <TextBox x:Name="BrightnessMaskIntensityTextBox"
                                                             Grid.Column="1"
                                                             Text="10.0"
                                                             FontSize="12"
                                                             Padding="4"/>
                                                </Grid>
                                            </StackPanel>
                                            
                                            <StackPanel Spacing="4">
                                                <TextBlock Text="Wave Length (Higher = Smoother)" 
                                                           Foreground="#FF666666"
                                                           FontSize="12"/>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="80"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Slider x:Name="BrightnessMaskWaveLengthSlider"
                                                            Grid.Column="0"
                                                            Minimum="1" 
                                                            Maximum="20" 
                                                            Value="5" 
                                                            TickFrequency="1"
                                                            Margin="0,0,8,0"/>
                                                    <TextBox x:Name="BrightnessMaskWaveLengthTextBox"
                                                             Grid.Column="1"
                                                             Text="5.0"
                                                             FontSize="12"
                                                             Padding="4"/>
                                                </Grid>
                                            </StackPanel>
                                            
                                            <StackPanel Spacing="4">
                                                <TextBlock Text="Update Interval (ms)" 
                                                           Foreground="#FF666666"
                                                           FontSize="12"/>
                                                <TextBox x:Name="BrightnessMaskUpdateIntervalTextBox"
                                                         Text="1000"
                                                         FontSize="12"
                                                         Padding="4"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Undulation Section -->
                                    <Border Background="#FFF5F5F5" 
                                            BorderBrush="#FFCCCCCC" 
                                            BorderThickness="1" 
                                            CornerRadius="4" 
                                            Padding="12">
                                        <StackPanel Spacing="10">
                                            <TextBlock Text="Undulation (Brightness Pulsing)" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold" 
                                                       Foreground="#FF333333"/>
                                            
                                            <StackPanel Spacing="4">
                                                <TextBlock Text="Speed (Lower = Slower Pulsing)" 
                                                           Foreground="#FF666666"
                                                           FontSize="12"/>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="80"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Slider x:Name="UndulationSpeedSlider"
                                                            Grid.Column="0"
                                                            Minimum="0" 
                                                            Maximum="0.2" 
                                                            Value="0.05" 
                                                            TickFrequency="0.01"
                                                            Margin="0,0,8,0"/>
                                                    <TextBox x:Name="UndulationSpeedTextBox"
                                                             Grid.Column="1"
                                                             Text="0.050"
                                                             FontSize="12"
                                                             Padding="4"/>
                                                </Grid>
                                            </StackPanel>
                                            
                                            <StackPanel Spacing="4">
                                                <TextBlock Text="Wave Length (Higher = Wider Waves, More Letters)" 
                                                           Foreground="#FF666666"
                                                           FontSize="12"/>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="80"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Slider x:Name="UndulationWaveLengthSlider"
                                                            Grid.Column="0"
                                                            Minimum="1" 
                                                            Maximum="20" 
                                                            Value="4.0" 
                                                            TickFrequency="0.5"
                                                            Margin="0,0,8,0"/>
                                                    <TextBox x:Name="UndulationWaveLengthTextBox"
                                                             Grid.Column="1"
                                                             Text="4.0"
                                                             FontSize="12"
                                                             Padding="4"/>
                                                </Grid>
                                            </StackPanel>
                                            
                                            <StackPanel Spacing="4">
                                                <TextBlock Text="Update Interval (ms)" 
                                                           Foreground="#FF666666"
                                                           FontSize="12"/>
                                                <TextBox x:Name="UndulationIntervalTextBox"
                                                         Text="50"
                                                         FontSize="12"
                                                         Padding="4"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            
            <TabItem Header="Difficulty">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Enemy Multipliers - Left Column -->
                        <Border Grid.Column="0"
                                Background="White" 
                                BorderBrush="#FF404040" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="18">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Enemy Multipliers" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="Black" 
                                           Margin="0,0,0,8"/>
                                
                                <!-- Enemy Health Multiplier -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="8">
                                        <TextBlock Text="Enemy Health:" 
                                                   Foreground="Black" 
                                                   FontSize="15"/>
                                        <Slider x:Name="EnemyHealthMultiplierSlider" 
                                                Minimum="0.5" 
                                                Maximum="3.0" 
                                                Value="1.0"
                                                TickFrequency="0.1"
                                                VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBox x:Name="EnemyHealthMultiplierTextBox" 
                                             Grid.Column="1" 
                                             Width="75"
                                             Height="28"
                                             Margin="5,0,0,0"
                                             Background="#FF2A2A2A"
                                             Foreground="White"
                                             BorderBrush="#FF555555"
                                             BorderThickness="1"
                                             Padding="6,4"
                                             FontSize="14"
                                             VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- Enemy Damage Multiplier -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="8">
                                        <TextBlock Text="Enemy Damage:" 
                                                   Foreground="Black" 
                                                   FontSize="15"/>
                                        <Slider x:Name="EnemyDamageMultiplierSlider" 
                                                Minimum="0.5" 
                                                Maximum="3.0" 
                                                Value="1.0"
                                                TickFrequency="0.1"
                                                VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBox x:Name="EnemyDamageMultiplierTextBox" 
                                             Grid.Column="1" 
                                             Width="75"
                                             Height="28"
                                             Margin="5,0,0,0"
                                             Background="#FF2A2A2A"
                                             Foreground="White"
                                             BorderBrush="#FF555555"
                                             BorderThickness="1"
                                             Padding="6,4"
                                             FontSize="14"
                                             VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Player Multipliers - Right Column -->
                        <Border Grid.Column="2"
                                Background="White" 
                                BorderBrush="#FF404040" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="18">
                            <StackPanel Spacing="12">
                                <TextBlock Text="Player Multipliers" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="Black" 
                                           Margin="0,0,0,8"/>
                                
                                <!-- Player Health Multiplier -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="8">
                                        <TextBlock Text="Player Health:" 
                                                   Foreground="Black" 
                                                   FontSize="15"/>
                                        <Slider x:Name="PlayerHealthMultiplierSlider" 
                                                Minimum="0.5" 
                                                Maximum="3.0" 
                                                Value="1.0"
                                                TickFrequency="0.1"
                                                VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBox x:Name="PlayerHealthMultiplierTextBox" 
                                             Grid.Column="1" 
                                             Width="75"
                                             Height="28"
                                             Margin="5,0,0,0"
                                             Background="#FF2A2A2A"
                                             Foreground="White"
                                             BorderBrush="#FF555555"
                                             BorderThickness="1"
                                             Padding="6,4"
                                             FontSize="14"
                                             VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- Player Damage Multiplier -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="8">
                                        <TextBlock Text="Player Damage:" 
                                                   Foreground="Black" 
                                                   FontSize="15"/>
                                        <Slider x:Name="PlayerDamageMultiplierSlider" 
                                                Minimum="0.5" 
                                                Maximum="3.0" 
                                                Value="1.0"
                                                TickFrequency="0.1"
                                                VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBox x:Name="PlayerDamageMultiplierTextBox" 
                                             Grid.Column="1" 
                                             Width="75"
                                             Height="28"
                                             Margin="5,0,0,0"
                                             Background="#FF2A2A2A"
                                             Foreground="White"
                                             BorderBrush="#FF555555"
                                             BorderThickness="1"
                                             Padding="6,4"
                                             FontSize="14"
                                             VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            
            <TabItem Header="Game Variables"
                     x:Name="GameVariablesTab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Category List -->
                    <Border Grid.Column="0" 
                            Background="#FF2A2A2A" 
                            BorderBrush="#FF555555" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Margin="0,0,10,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="Categories" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       Margin="8,6,8,6"/>
                            
                            <ListBox x:Name="GameVariablesCategoryListBox" 
                                     Grid.Row="1" 
                                     Background="Transparent" 
                                     BorderThickness="0"
                                     SelectionMode="Single"
                                     Margin="4">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" 
                                                   Foreground="White" 
                                                   Padding="4,3"
                                                   FontSize="14"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.Styles>
                                    <Style Selector="ListBoxItem:selected">
                                        <Setter Property="Background" Value="#FF4A4A4A"/>
                                    </Style>
                                    <Style Selector="ListBoxItem:pointerover">
                                        <Setter Property="Background" Value="#FF3A3A3A"/>
                                    </Style>
                                </ListBox.Styles>
                            </ListBox>
                        </Grid>
                    </Border>
                    
                    <!-- Variables Panel -->
                    <ScrollViewer Grid.Column="1" 
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="GameVariablesPanel" 
                                    Spacing="2">
                            <!-- Variables will be added here dynamically -->
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            
            <TabItem Header="Actions"
                     x:Name="ActionsTab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Actions List -->
                    <Border Grid.Column="0" 
                            Background="#FF2A2A2A" 
                            BorderBrush="#FF555555" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Margin="0,0,10,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="Actions" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       Margin="10,10,10,10"/>
                            
                            <StackPanel Grid.Row="1" 
                                        Orientation="Horizontal" 
                                        Spacing="5" 
                                        Margin="10,0,10,10">
                                <Button x:Name="CreateActionButton" 
                                        Content="New" 
                                        Width="70"
                                        Height="30"
                                        Background="#FF4CAF50"
                                        Foreground="White"
                                        BorderThickness="0"
                                        CornerRadius="3"
                                        Cursor="Hand"
                                        FontSize="15">
                                    <Button.Styles>
                                        <Style Selector="Button:pointerover">
                                            <Setter Property="Background" Value="#FF66BB6A"/>
                                        </Style>
                                    </Button.Styles>
                                </Button>
                                
                                <Button x:Name="DeleteActionButton" 
                                        Content="Delete" 
                                        Width="70"
                                        Height="30"
                                        Background="#FFE53935"
                                        Foreground="White"
                                        BorderThickness="0"
