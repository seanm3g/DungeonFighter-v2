<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="RPGGame.UI.Avalonia.TuningMenuPanel"
             Background="#E0202020">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="TUNING PARAMETERS" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="#FFD700" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Category List -->
            <Border Grid.Column="0" 
                    Background="#FF2A2A2A" 
                    BorderBrush="#FF555555" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Categories" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="10,10,10,10"/>
                    
                    <ListBox x:Name="CategoryListBox" 
                             Grid.Row="1" 
                             Background="Transparent" 
                             BorderThickness="0"
                             SelectionMode="Single"
                             Margin="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" 
                                           Foreground="White" 
                                           Padding="5"
                                           FontSize="14"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem:selected">
                                <Setter Property="Background" Value="#FF4A4A4A"/>
                            </Style>
                            <Style Selector="ListBoxItem:pointerover">
                                <Setter Property="Background" Value="#FF3A3A3A"/>
                            </Style>
                        </ListBox.Styles>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- Variables Panel -->
            <ScrollViewer Grid.Column="1" 
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled">
                <StackPanel x:Name="VariablesPanel" 
                            Spacing="10">
                    <!-- Variables will be added here dynamically -->
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="10" 
                    Margin="0,20,0,0">
            <Button x:Name="BackButton" 
                    Content="Back" 
                    Width="100" 
                    Height="35"
                    Background="#FF555555"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="3"
                    Cursor="Hand"
                    FontSize="15"
                    FontWeight="SemiBold">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="#FF666666"/>
                    </Style>
                </Button.Styles>
            </Button>
            
            <Button x:Name="SaveButton" 
                    Content="Save Changes" 
                    Width="150" 
                    Height="35"
                    Background="#FF4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="3"
                    Cursor="Hand"
                    FontSize="15"
                    FontWeight="SemiBold">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="#FF66BB6A"/>
                    </Style>
                </Button.Styles>
            </Button>
        </StackPanel>
        
        <!-- Status Message -->
        <TextBlock x:Name="StatusMessage" 
                   Grid.Row="2" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center"
                   Foreground="#FF4CAF50" 
                   FontSize="14"
                   Margin="0,20,0,0"
                   IsVisible="False"/>
    </Grid>
</UserControl>

